VERSION = 1.0.3

# Install paths
PREFIX = /usr/local

# Flags
CPPFLAGS = -DVERSION=\"$(VERSION)\"

ifeq ($(OS), Windows_NT)
CFLAGS = -Wall -O2 `pkg-config --cflags libusb-1.0` $(INCLUDES)
LDFLAGS = -L/mingw64/lib -I/mingw64/include/libusb-1.0 -lusb-1.0
else
CFLAGS = -Wall -O2 `pkg-config --cflags libusb-1.0` $(INCLUDES)
LDFLAGS = `pkg-config --libs libusb-1.0`
endif

SRC = HydraUSB3_USB_benchmark.c ../libusb_portable/libusb_portable.c ../cargs/src/cargs.c
HDR = usb_cmd.h ../libusb_portable/libusb_portable.h ../cargs/include/cargs.h
OBJ = $(SRC:.c=.o)
BIN = HydraUSB3_USB_benchmark
DISTFILES = $(SRC) $(HDR) Makefile

INCLUDES = \
  -I"../libusb_portable" \
  -I"../cargs/include"

all: $(BIN)

$(OBJ): usb_cmd.h ../libusb_portable/libusb_portable.h ../cargs/include/cargs.h

$(BIN): $(OBJ)
	$(CC) -o $@ $^ $(LDFLAGS)

install:
	mkdir -p $(DESTDIR)$(PREFIX)/bin
	cp -f $(BIN) $(DESTDIR)$(PREFIX)/bin
	chmod 755 $(DESTDIR)$(PREFIX)/bin/$(BIN)

uninstall:
	rm -vf $(DESTDIR)$(PREFIX)/bin/$(BIN)

dist:
	mkdir -p $(BIN)-$(VERSION)
	cp $(DISTFILES) $(BIN)-$(VERSION)
	tar -cf $(BIN)-$(VERSION).tar $(BIN)-$(VERSION)
	gzip $(BIN)-$(VERSION).tar
	rm -rf $(BIN)-$(VERSION)

clean:
	rm -f $(OBJ) $(BIN)

.PHONY: all install uninstall dist clean
